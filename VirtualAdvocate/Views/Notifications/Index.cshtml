@model IEnumerable<VirtualAdvocate.Models.NotificationViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutmain.cshtml";
}

<h2>Notifications</h2>

<div class="col-lg-12">
    @if (Model.Count() > 0)
    {
        <table id="tblInformationm" class="table table-striped table-hover dataTable table-custom-border">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a href="@item.Url">@item.Title</a></td>
                        <td>
                            @*@if (item.PriorToExpiry > 0)
                                {
                                    <div class="row">
                                        Prior to expiry: @item.PriorToExpiry
                                    </div>
                                }
                                @if (item.OnExpiry > 0)
                                {
                                    <div class="row">
                                        On expiry: @item.OnExpiry
                                    </div>
                                }*@

                            <div class="row">
                                @item.Title expired: @item.AfterExpiry
                            </div>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p style="margin: 10px 0px 0px -13px;">No notifications for you.</p>
    }
</div>