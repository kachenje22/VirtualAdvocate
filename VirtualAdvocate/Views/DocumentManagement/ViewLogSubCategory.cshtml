@model IEnumerable<VirtualAdvocate.Models.ViewLogSubCategory_Result>
@{
    ViewBag.MenuActive = "LogSubCategory";
    Layout = "~/Views/Shared/_Layoutmain.cshtml";
}

<h2>ViewLog SubCategory</h2>
<div class="row">
    <div class="col-lg-12">
        <div class="well bs-component">
            <fieldset>
                <legend>Category Log Details</legend>
                <div class="row">
                    @{
                        int rowNo = 0;
                        var msg = "";
                    }
                    @foreach (var item in Model)
                    {
                        rowNo = rowNo + 1;
                        if (item.IsEnabled == true)
                        {
                            msg = "Enabled";
                        }
                        else
                        {
                            msg = "Disabled";
                        }

                        if (rowNo == 1)
                        {
                            <fieldset>
                                <legend>Current Values</legend>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.Label("Date", new { @class = "col-lg-6 control-label" })
                                        <div class="col-lg-6">
                                            <label class="editable-content col-lg-12">@item.ModifiedDate.ToString()</label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Sub Category", new { @class = "col-lg-6 control-label" })
                                        <div class="col-lg-6">
                                            <label class="editable-content col-lg-12">@item.DocumentSubCategoryName</label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Category", new { @class = "col-lg-6 control-label" })
                                        <div class="col-lg-6">
                                            <label class="editable-content col-lg-12">@item.DocumentCategoryName</label>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.Label("Action", new { @class = "col-lg-6 control-label" })
                                        <div class="col-lg-6">
                                            <label class="editable-content col-lg-12">@item.Action</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Category Description", new { @class = "col-lg-6 control-label" })
                                        <div class="col-lg-6">
                                            <label class="editable-content col-lg-12">@item.SubCategoryDescription</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("IsEnabled", new { @class = "col-lg-6 control-label" })
                                        <div class="col-lg-6">
                                            <label class="editable-content col-lg-12"> @msg</label>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        }
                        if (rowNo == 2)
                        {
                            <fieldset>
                                <legend>Original Values</legend>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.Label("Date", new { @class = "col-lg-6 control-label" })
                                        <div class="col-lg-6">
                                            <label class="editable-content col-lg-12">@item.ModifiedDate.ToString()</label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Sub Category", new { @class = "col-lg-6 control-label" })
                                        <div class="col-lg-6">
                                            <label class="editable-content col-lg-12">@item.DocumentSubCategoryName</label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label("Category", new { @class = "col-lg-6 control-label" })
                                        <div class="col-lg-6">
                                            <label class="editable-content col-lg-12">@item.DocumentCategoryName</label>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.Label("Action", new { @class = "col-lg-6 control-label" })
                                        <div class="col-lg-6">
                                            <label class="editable-content col-lg-12">@item.Action</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("Category Description", new { @class = "col-lg-6 control-label" })
                                        <div class="col-lg-6">
                                            <label class="editable-content col-lg-12">@item.SubCategoryDescription</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.Label("IsEnabled", new { @class = "col-lg-6 control-label" })
                                        <div class="col-lg-6">
                                            <label class="editable-content col-lg-12"> @msg</label>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        }

                    }
                </div>
            </fieldset>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="">
                <button type="button" value="Back" class="btn btn-cancel" id="btncancel" onclick="location.href='@Url.Action("SubCategoryLog","DocumentManagement")'">Back</button>
            </div>
        </div>
    </div>
</div>
