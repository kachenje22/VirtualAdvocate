@model IEnumerable<VirtualAdvocate.Models.TemplateKeywordModel>
@if (Model != null)
{
    int i = 0;
<div>
   
    <h4>Template Keys</h4>
    <hr />
    <table class="table table-striped table-hover dataTable table-custom-border" id="tblServiceList">
        <thead>
            <tr>
                <th>@Html.DisplayName("Select")</th>
                <th>@Html.DisplayName("Label")</th>
                <th>@Html.DisplayName("Key Value")</th>
                <th>@Html.DisplayName("Display Order")</th>

            </tr>
        </thead>
        <tbody>



            @foreach (var item in Model)
            {


                <tr>
                    <td>
                        @Html.TextBoxFor(modelItem => item.TemplateKeyId, new { @Name = "templateKeyword[" + i + "].TemplateKeyId", id = "templateKeyword_" + i + "__TemplateKeyId", @style = "display:none" })
                        @Html.CheckBoxFor(modelItem => item.Selected, new { @Name = "templateKeyword[" + i + "].Selected", id = "templateKeyword_" + i + "__Selected" })
                      
                    </td>
                    
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.TemplateKeyLabels, new { @Name = "templateKeyword[" + i + "].TemplateKeyLabels", id = "templateKeyword_" + i + "__TemplateKeyLabels" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TemplateKeyValue, new { @Name = "templateKeyword[" + i + "].TemplateKeyValue", id = "templateKeyword_" + i + "TemplateKeyValue" })
                    </td>
                    <td>
                        @Html.TextBoxFor(modelItem => item.Order, new { @Name = "templateKeyword[" + i + "].Order", id = "templateKeyword_" + i + "__Order", onkeypress = "return isNumber(event)" })
                        @Html.ValidationMessageFor(modelItem => item.Order, string.Empty, new { @class = "text-danger" })
                    </td>
                  
                </tr>
                i++;
            }

        </tbody>
       
    </table>
</div>
}

