@model VirtualAdvocate.Models.CoverLetterModel
@{
    ViewBag.MenuActive = "CoverLetter";
    //ViewBag.Title = "CREATE COVER LETTER";
    Layout = "~/Views/Shared/_Layoutmain.cshtml";
}

<h2>CREATE COVER LETTER</h2>

@using (Html.BeginForm("CreateCoverLetter", "DocumentManagement", FormMethod.Post, new { @class = "form-horizontal", role = "form", onsubmit = "showProgress()" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <div class="well bs-component">
                <fieldset>
                    <legend>Cover Letter</legend>

                    <div class="row">
                        <div class="col-lg-9">
                            <div class="form-group">
                                @Html.Label("Customer Name", new { @class = "col-lg-6 control-label" })
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.CustomerName, string.Empty, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Bank Name", new { @class = "col-lg-6 control-label" })
                                <div class="col-lg-6">
                                    @Html.TextBoxFor(m => m.BankName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.BankName, string.Empty, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Bank Address", new { @class = "col-lg-6 control-label" })
                                <div class="col-lg-6">
                                    @Html.TextAreaFor(m => m.BankAddress, new { @class = "form-control", @rows=3 })
                                    @Html.ValidationMessageFor(m => m.BankAddress, string.Empty, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-2">
                    <input type="submit" class="btn btn-default" value="Submit" />
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
